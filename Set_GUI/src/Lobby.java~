import java.awt.*;

import javax.swing.*;

@SuppressWarnings("serial")
public class Lobby extends JFrame {
  
  private JPanel panel = new JPanel(new BorderLayout()); 
  private JPanel top = new JPanel();
  private JPanel left = new JPanel();
  private JPanel center = new JPanel();
  private JPanel error = new JPanel(); // right side of the box layout; used for error messages
  
  public Lobby() {
    
    makeTop();
    makeLeft();
    makeCenter();
    makeError();

    panel.add(top, BorderLayout.NORTH);
    panel.add(left, BorderLayout.WEST);
    panel.add(center, BorderLayout.CENTER);
    panel.add(error, BorderLayout.EAST);
    
    setTitle("Set Game Lobby");
    setSize(400,400);
    setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    setLocationRelativeTo(null);
  }
  
  // The heading for the lobby page
  public void makeTop() {
    JLabel title = new JLabel("Set Game Lobby")
    top.add(title);
    
  }
  
  public void makeLeft() {
    
  }
  
  public void makeCenter() {
    
  }

  public void makeError() {
    
  }
  // temporary main method for testing
  public static void main(String[] args) {
    
    SwingUtilities.invokeLater(new Runnable() {
      
      public void run() {
        Lobby log = new Lobby();
        log.setVisible(true);
      }
    });
  }
  
}
